{
	"name": "agents-md",
	"description": "A typescript library",
	"version": "0.0.3-alpha",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"bin": {
		"agents-md": "dist/cli/index.js"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"release": "bun run build && npm publish",
		"prepare": "simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.2.21",
		"@types/yargs": "^17.0.33",
		"bumpp": "^10.2.3",
		"bunup": "^0.12.0",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ivawzh/agents-md.git"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint:fix && git add ."
	},
	"homepage": "https://github.com/ivawzh/agents-md#readme",
	"bugs": {
		"url": "https://github.com/ivawzh/agents-md/issues"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18",
		"bun": ">=1"
	},
	"dependencies": {
		"fast-glob": "^3.3.3",
		"yargs": "^18.0.0"
	}
}
